<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        tools:context=".MainActivity">


    <!-- Title -->


    <!-- Times clicked TextView -->


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="@string/textName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/textView"
            android:gravity="center"
            android:layout_marginBottom="556dp"
            app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginTop="126dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton"

            tools:ignore="UnknownId"/>
    <TextView android:layout_width="106dp"
              android:layout_height="42dp"
              android:textSize="15sp"
              android:text="@string/credits"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              android:id="@+id/textView3"
              android:layout_marginBottom="16dp"
              android:gravity="center"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintHorizontal_bias="0.531"/>


    <!-- Amount of times clicked -->

    <!-- Goose image -->

    <!-- Goose image -->

    <TextView android:layout_width="134dp"
              android:layout_height="38dp"
              android:text="@string/amountName"
              android:textSize="20sp"
              android:gravity="center"
              android:id="@+id/textView2"
              app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="399dp"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
              app:layout_constraintVertical_bias="0.449"/>

    <TextView android:layout_width="152dp"
              android:layout_height="66dp"
              android:text="@string/amountInt"
              android:textSize="40sp"
              android:gravity="center"
              android:id="@+id/textView5"
              app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="399dp"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
              app:layout_constraintVertical_bias="1.0"/>

    <ImageButton android:layout_width="232dp"
                 android:layout_height="251dp"
                 android:scaleType="fitCenter"
                 android:paddingStart="2dp"
                 android:paddingEnd="2dp"
                 android:background="@color/backgroundColor"
                 android:paddingLeft="20dp"
                 android:paddingRight="20dp"
                 android:src="@drawable/h9m39vv630h51"
                 android:id="@+id/imageButton2"
                 app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginBottom="89dp"
                 app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent" tools:ignore="ContentDescription"
                 app:layout_constraintHorizontal_bias="0.413" app:layout_constraintVertical_bias="0.532"/>

    <ImageButton android:layout_width="42dp"
                 android:layout_height="42dp"
                 android:scaleType="fitCenter"
                 android:src="@drawable/icons8settings50"
                 android:background="@null"
                 android:id="@+id/settings"

                 app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintLeft_toLeftOf="parent"
                 app:layout_constraintRight_toRightOf="parent"
                 app:layout_constraintTop_toTopOf="parent"

                 app:layout_constraintHorizontal_bias="0.045"
                 app:layout_constraintVertical_bias="0.023"
                 tools:ignore="ContentDescription"/>



    <View
            android:layout_width="346dp"
            android:layout_height="309dp"
            android:id="@+id/view"
            android:alpha="0.8"
            android:background="@color/viewBackgroundColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.492" app:layout_constraintVertical_bias="0.542"/>


    <ImageButton android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:scaleType="fitCenter"
                 android:src="@drawable/icons8macosclose60"
                 android:background="@null"

                 android:id="@+id/closeSettings"

                 app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintLeft_toLeftOf="parent"
                 app:layout_constraintRight_toRightOf="parent"
                 app:layout_constraintTop_toTopOf="parent"

                 app:layout_constraintHorizontal_bias="0.889"
                 app:layout_constraintVertical_bias="0.337"

                 tools:ignore="ContentDescription"/>

    <TextView android:layout_width="127dp"
              android:layout_height="34dp"
              android:gravity="center"
              android:textSize="22sp"
              android:id="@+id/settingsLabel"

              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"

              android:text="@string/settings"
              app:layout_constraintVertical_bias="0.334"/>


</androidx.constraintlayout.widget.ConstraintLayout>