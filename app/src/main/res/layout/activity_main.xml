                 android:paddingEnd="40dp"
                 android:paddingLeft="120dp"
                 android:paddingRight="120dp"
                 android:src="@drawable/h9m39vv630h51" tools:layout_editor_absoluteY="312dp"
                 tools:layout_editor_absoluteX="86dp"/>
