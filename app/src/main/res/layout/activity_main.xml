<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <!-- Title -->

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="@string/textName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/textView"
            android:layout_marginBottom="563dp"
            app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginTop="126dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton" tools:ignore="UnknownId"/>

    <!-- Click Button -->


    <Button
            android:layout_height="155dp"
            android:layout_width="220dp"
            android:text="@string/buttonName"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:textSize="20sp"
            android:paddingLeft="120dp"
            android:paddingRight="120dp"
            android:id="@+id/button"


            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="120dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.625"/>


    <!-- Time clicked TextView -->

    <TextView android:layout_width="300dp"
              android:layout_height="45dp"
              android:text="@string/amountName"
              android:textSize="20sp"
              android:id="@+id/textView2"
              app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="399dp"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.855"
              app:layout_constraintVertical_bias="0.728"/>
